doctype html
html
    head
        title Maria y Rafael
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(rel="shortcut icon" type="image/ico" href="/images/favicon.ico")
        link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.1/css/all.css" integrity="sha384-5sAR7xN1Nv6T6+dT2mhtzEpVJvfS3NScPQTrOxhwjIuvcA67KV2R5Jz6kr4abQsz" crossorigin="anonymous")
        link(href="https://fonts.googleapis.com/css?family=Dancing+Script" rel="stylesheet")
        link(rel='stylesheet', href='/stylesheets/style.css')

        script(src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous")

        block head

        script.
            if( location.host != 'localhost' && location.protocol != 'https' ){
                window.location.href = 'https://mariayrafael.family';
            }

    body
        block content
        block scripts
        //- Global site tag (gtag.js) - Google Analytics
        script(async src="https://www.googletagmanager.com/gtag/js?id=UA-128594106-1")
        script.
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());

            if ( String('#{page}').length ) {
                gtag('config', 'UA-128594106-1', {
                    'page' : '#{page.name}'
                });
            }
