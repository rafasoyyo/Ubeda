extends layout

block head
    style.
        #welcome {
            background-image: url('../images/finguers.jpg');
            background-position: top right;
        }

        //- #welcome .container{
        //-     padding: 15px 25px;
        //- }

        #welcome h1,
        #welcome p {
            color: rgba(250, 250, 250, .7);
            //- display: inline;
            margin: 0;
        }

        #welcome h1{
            font-size: 48px;
        }

        #welcome p{
            font-size: 30px;
        }

        #places {

        }

        #places .card-box {
            width: 96%;
            box-sizing: border-box;
            display: inline-block;
            margin: 2%;
            box-shadow: 1px 1px 5px -1px black;
        }

        #places .card-box:active,
        #places .card-box:focus {
            box-shadow: 0px 0px 1px 0px black;
        }

        #places .card-image, .card-text {
            width: 50%;
            height: 150px;
            display: inline-block;
            vertical-align: top;
            position: relative;
        }

        #places .card-text .text {
            padding: 6%;
            font-size: 16px;
            line-height: 20px;
        }

        #places .card-text .text p {
            padding: 0 6%;
            color: #808080;
        }

        #places .card-text .link {
            position: absolute;
            bottom: 10px;
            width: 100%;
            text-align: center;
            height: 20px;
        }

        #places .card-text .link span {
            border: 1px;
            padding: 5px 15px;
            color: white;
            background-color: #607D8B;
            font-size: 13px;
        }

        #footer p{
            padding: 15px;
            margin: 0;
            color: white;
        }

