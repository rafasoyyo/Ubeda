            padding: 5px 15px;
            color: white;
            background-color: #607D8B;
            font-size: 26px;
            text-decoration: none;
        }

        #notification {
            position: fixed;
            left: 0;
            right: 0;
            bottom: -110%;
            height: 60px;
            padding-top: 5%;
            z-index: 10;
            background-color: rgba(255, 255, 255, .75);
            transition: bottom 1s cubic-bezier(0.05, -0.08, 1, 0.05);
        }
        #notification.showed {
            bottom: 0;
            transition: bottom 1s cubic-bezier(0, 1.2, 0.75, 1.01);
        }
        #notification > div a {
            font-size: 20px !important;
        }

        #placeInfo {
            max-width: calc(100% - 20px);
            width: 780px;
            height: calc(100vh - 20px);
            top: 10px;
            margin: 0 10px;
            display: block;
            padding: 0;
            z-index: 10;
            position: fixed;
            background-color: white;
            box-shadow: 0 0 10px 1px grey;
            overflow-x: auto;
            color: #607D8B;
        }

        #placeInfo .background {
            content: '';
            opacity: .1;
            background-image: url("/images/novios.jpg");
            background-size: 100% 105%;
            background-position: right bottom;
            background-repeat: no-repeat;
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            z-index: -1;
        }

        #placeInfo .close {
            position: absolute;
            top: 0;
            right: 0;
            margin: 15px 20px;
            font-size: 20px;
        }

        #placeInfo .box {
            padding: 50px 175px 0;
        }

        #placeInfo .box > div{
            padding: 5px 0px;
            min-height: calc((100vh - 120px) / 6);
        }

        @media only screen and (max-width: 800px) {
            //- #placeInfo {
            //-     max-width: calc(100% - 20px);
            //-     left: 10px;
            //- }

            #placeInfo .box {
                padding: 50px 5px 0;
            }
        }

        #placeInfo .text-left {
            text-align: left;
            display: inline-block;
            vertical-align: middle;
        }

        #placeInfo .text-right {
            text-align: right;
            display: inline-block;
            vertical-align: middle;
        }

        #placeInfo .img {
            margin: 0 5px;
        }

        #placeInfo .img img {
            width: 80px;
            height: initial;
        }

        #placeInfo .txt {
            padding: 0 5px;
            width: calc(100% - 91px);
        }

        #placeInfo .txt p {
            font-size: 26px;
            font-weight: bold;
            margin: 0;
            line-height: 27px;
        }

        #placeInfo .txt span{
            font-size: 20px;
            display: block;
            line-height: 21px;
        }

        #places .card-box {
            width: 100%;
            box-sizing: border-box;
            display: inline-block;
            padding: 3px;
            //- box-shadow: 1px 1px 5px -1px black;
        }

        //- #places .card-box:active,
        //- #places .card-box:focus {
        //-     box-shadow: 0px 0px 1px 0px black;
        //- }

        #places .card-image, .card-text {
            width: 50%;
            height: 150px;
            display: inline-block;
            vertical-align: top;
            position: relative;
        }

        .card-text p,
        .card-text span {
            font-family: 'Dancing Script', cursive;
        }

        #places .card-text .text {
            //- padding: 4vh 0vw 0vw 4vw;
            padding-top: 4vh;
            font-size: 16px;
            line-height: 20px;
            width: 125px;
            display: block;
            margin: 0 auto;
        }

        #places .card-text .text p {
            margin: 0px;
            padding: 0;
            color: rgba(0, 0, 0, .65);
            font-size: 26px;
            line-height: 28px;
        }

        #places .card-text .link {
            position: absolute;
            bottom: 15px;
            width: 100%;
            text-align: center;
            //- height: 20px;
        }

        #places .card-text .link span {
            border: 1px;
            padding: 5px 15px;
            color: inherit;
            background-color: white;
            font-size: 20px;
            font-weight: bold;
        }

        #footer p{
            padding: 15px;
            margin: 0;
            color: white;
        }

    script.
        var showInfo, hideInfo, showNotification;
        window.onload = function(){
            var placeInfo = document.getElementById('placeInfo');
            showInfo = function(){
                placeInfo.style.display = 'block';
            }
            hideInfo= function() {
                placeInfo.style.display = 'none';
            }


            var height = window.innerHeight;
            var notification = document.getElementById('notification');
            showNotification = function() {
                var top = (window.pageYOffset || document.scrollTop)  - (document.clientTop || 0);
                if(!isNaN(top) && top > height/4) {
                    console.log('true: ', height);
                    notification.classList.add('showed');
                    window.removeEventListener('mousewheel', showNotification);
                    window.removeEventListener('touchmove', showNotification);
                    window.removeEventListener('DOMMouseScroll', showNotification);
                }
                return false;
            }
            hideNotification = function() {
                notification.classList.remove('showed');
            }
            window.addEventListener('mousewheel', showNotification);
            window.addEventListener('touchmove', showNotification);
            window.addEventListener('DOMMouseScroll', showNotification);
        }

