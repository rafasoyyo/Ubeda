        }

        #asistencia {
            padding: 20px 25px;
            font-size: 24px;
        }

        #asistencia > div {
            margin: 20px 0 5px 0;
        }

        #asistencia p {
            color: rgba(0, 0, 0, .75);
        }

        #notification > div a,
